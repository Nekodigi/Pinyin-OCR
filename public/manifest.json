{
  "manifest_version": 3,
  "name": "Pinyin OCR",
  "description": "An extension that uses OCR to convert a image to Pinyin",
  "version": "1.0",
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon128.png"
  },
  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": [
      "js/background.js"
    ]
  }
],
  "permissions": ["storage"],
  "host_permissions": ["https://github-readme-stats.vercel.app/*"]
}
